{
    "configurations": [
        {
            "name": "ServerLive: localhost_debug_true_settings",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app-main/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:6081",
                "--settings",
                "app.localhost_debug_true_settings"
            ],
            "django": true,
            "justMyCode": true
        }

        ,{
            "name": "ServerLive: localhost_debug_false_settings",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app-main/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:6081",
                "--settings",
                "app.localhost_debug_false_settings"
            ],
            "django": true,
            "justMyCode": true
        }

        ,{
            "name": "ServerLive: production_settings",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app-main/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8121",
                "--settings",
                "app.production_settings"
            ],
            "django": true,
            "justMyCode": true,
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "DJANGO_DEBUG": "true",
                "SERVICE_URL_WEB": "https://indifferently-piscine-anson.ngrok-free.dev",
                "SERVICE_FQDN_WEB": "indifferently-piscine-anson.ngrok-free.dev",
                "AZURE_REDIRECT_URI": "https://indifferently-piscine-anson.ngrok-free.dev/auth/callback",
                "DJANGO_ALLOWED_HOSTS": "localhost,127.0.0.1,indifferently-piscine-anson.ngrok-free.dev",
                "DJANGO_CSRF_TRUSTED_ORIGINS": "https://indifferently-piscine-anson.ngrok-free.dev",
                "DJANGO_SECURE_SSL_REDIRECT": "false",
                "DJANGO_SECURE_HSTS_SECONDS": "0",
                "DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS": "false",
                "DJANGO_SECURE_HSTS_PRELOAD": "false",
                "DJANGO_SESSION_COOKIE_SECURE": "false",
                "DJANGO_CSRF_COOKIE_SECURE": "false"
            }
        }


    ]
}
