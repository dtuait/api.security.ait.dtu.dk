{
    "configurations": [
        {
            "name": "Python: script",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app-main/manage.py",
            "args": [
                "runscript",
                "management.scripts.locate-department-domain"
            ],
            "django": true,
            "justMyCode": true
        },

        {
            "name": "Python: Runserver Live",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app-main/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8081",
                "--settings",
                "app.development_settings"
            ],
            "django": true,
            "justMyCode": true
        },

        {
            "name": "Runserver Live via Proxy",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app-main/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8000"

            ],
            "django": true,
            "justMyCode": false
        }
        ,
        {
            "name": "ChromiumDev: Home",
            "runtimeExecutable": "C:\\Program Files\\chromium\\chrome-win\\chrome.exe",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:8081",
            "webRoot": "${workspaceFolder}/app-main/sccm",
            "disableNetworkCache": true
        },
    ]
}